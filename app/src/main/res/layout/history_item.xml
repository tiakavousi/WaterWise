<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <!-- Circle Progress (Custom View for Percentage) -->
    <com.example.WaterWise.history.CircleProgressView
        android:id="@+id/circleProgressView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Percentage Text inside Circle -->
    <TextView
        android:id="@+id/percentageText"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="71%"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/circleProgressView"
        app:layout_constraintBottom_toBottomOf="@id/circleProgressView"
        app:layout_constraintStart_toStartOf="@id/circleProgressView" />

    <!-- Date Text -->
    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mon, Aug 30, 2024"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/circleProgressView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
